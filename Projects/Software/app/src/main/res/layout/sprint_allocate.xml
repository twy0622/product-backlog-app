<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/manageSprintTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Manage Sprint"
            android:textSize="20dp" />

        <TextView
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:text="Product Backlog"
            android:textStyle="bold"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productBacklogList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:text="Sprint Backlog" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sprintBacklogList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/saveSprintButton"
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:text="Save Changes"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/startSprintButton"
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:text="Start"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>